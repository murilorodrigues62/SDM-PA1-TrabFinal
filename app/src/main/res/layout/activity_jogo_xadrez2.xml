<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifspsaocarlos.sdm.trabalhofinal.Xadrez"
    android:weightSum="10"
    android:orientation="vertical"
    android:contextClickable="true"
    android:background="#303030">

    <TextView
        android:id="@+id/txtNomeJogador1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:text="Jogador 1"
        android:textColor="#FAFAFA" />

    <TextView
        android:id="@+id/txtTempoJogador1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="00"
        android:singleLine="false"
        android:autoText="false"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:elegantTextHeight="true"
        android:textIsSelectable="false"
        android:textSize="50dp"
        android:layout_weight="2"
        android:textColor="#E91E63" />

    <TextView
        android:id="@+id/txtNomeJogador2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:autoText="false"
        android:text="Jogador 2"
        android:textColor="#FAFAFA" />

    <TextView
        android:id="@+id/txtTempoJogador2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="50dp"
        android:text="00"
        android:singleLine="true"
        android:autoText="false"
        android:textAlignment="center"
        android:layout_weight="2"
        android:textStyle="normal|bold"
        android:textColor="#F57F17" />
    <Button
        android:id="@+id/btnIniciarXadrez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/iniciar"
        android:layout_weight="5"
        android:textStyle="bold"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#82B1FF" />

</LinearLayout>
